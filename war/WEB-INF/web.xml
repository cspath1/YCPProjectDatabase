<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.cspath1.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.cspath1.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountCreationGuestServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.AccountCreationGuestServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountCreationFacultyServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.AccountCreationFacultyServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountCreationStudentServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.AccountCreationStudentServlet</servlet-class>
  </servlet>

  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.cspath1.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountCreationFacultyAjaxServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.ajax.AccountCreationFacultyAjaxServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountCreationGuestAjaxServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.ajax.AccountCreationGuestAjaxServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountCreationStudentAjaxServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.ajax.AccountCreationStudentAjaxServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginAjaxServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.cspath1.servlet.ajax.LoginAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountCreationGuestServlet</servlet-name>
  	<url-pattern>/accountCreationGuest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountCreationFacultyServlet</servlet-name>
  	<url-pattern>/accountCreationFaculty</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountCreationStudentServlet</servlet-name>
  	<url-pattern>/accountCreationStudent</url-pattern>
  </servlet-mapping>

  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginAjaxServlet</servlet-name>
  	<url-pattern>/ajax/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountCreationStudentAjaxServlet</servlet-name>
  	<url-pattern>/ajax/accountCreationStudent</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountCreationFacultyAjaxServlet</servlet-name>
  	<url-pattern>/ajax/accountCreationFaculty</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountCreationGuestAjaxServlet</servlet-name>
  	<url-pattern>/ajax/accountCreationGuest</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
